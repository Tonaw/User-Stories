@model TicketSearchViewModel

<!-- search form -->
<form asp-controller="Ticket" asp-action="Search" class="d-flex flex-row align-items-center">

    <!-- TBC - uncomment and add two more radio input fields to search OPEN and CLOSED tickets -->

    
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@TicketRange.ALL">
        <label class="form-check-label" for="Range">All</label>

        <input class="form-check-input" type="radio" asp-for="Range" value="@TicketRange.OPEN">
        <label class="form-check-label" for="Range">Open</label>

        <input class="form-check-input" type="radio" asp-for="Range" value="@TicketRange.CLOSED">
        <label class="form-check-label" for="Range">Close</label>
    </div>
    
    
    <!-- TBC add an input field for the Query -->
    <input asp-for="Query" class="form-input" placeholder="Search.." />
   
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>